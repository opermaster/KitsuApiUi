<Window x:Class="KitsuApiUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitsuApiUi"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Kitsu_Search" Height="650" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="20">
                <StackPanel>
                    <TextBox FontSize="20" Width="300" Height="30" Margin="0 0 0 10" x:Name="Input_Name"></TextBox>
                    <TextBox FontSize="20" Width="300" Height="30" Margin="0 0 0 10" x:Name="Input_Genres"></TextBox>
                    <Button FontSize="20" Width="100" x:Name="Enter_User_Name" Click="Enter_User_Name_Click">Find</Button>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <StackPanel x:Name="Anime_List"></StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
