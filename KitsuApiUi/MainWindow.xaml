<Window x:Class="KitsuApiUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitsuApiUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <StackPanel Margin="20">
        <TextBox Height="30" Margin="0 0 0 10" x:Name="Input_Name"></TextBox>
        <Button Width="100" x:Name="Enter_User_Name" Click="Enter_User_Name_Click">Find</Button>
        <Image Width="300" Height="300" Margin="00 10 00 10" x:Name="Anime_Poster"></Image>
        <TextBlock  TextWrapping="Wrap" FontSize="30" x:Name="Output_User"></TextBlock>
    </StackPanel>
</Window>
